{
  "variables": {
    "profile": "",
    "region": "",
    "ami_regions": ""
  },
  "builders": [
    {
      "type": "amazon-ebs",
      "profile": "{{user `profile`}}",
      "region": "{{user `region`}}",
      "ami_regions": "{{user `ami_regions`}}",
      "source_ami_filter": {
        "filters": {
          "virtualization-type": "hvm",
          "name": "amzn2-ami-hvm-*-x86_64-gp2",
          "root-device-type": "ebs"
        },
        "owners": [
          "amazon"
        ],
        "most_recent": true
      },
      "encrypt_boot": false,
      "instance_type": "t3a.nano",
      "ssh_username": "ec2-user",
      "ami_name": "amzn2-ami-hvm-{{isotime \"20060102030405\"}}-x86_64-bastion",
      "ami_description": "Bastion GP2",
      "associate_public_ip_address": true
    }
  ],
  "provisioners": [
    {
      "type": "shell",
      "script": "user_data.sh",
      "execute_command": "sudo -S env {{ .Vars }} {{ .Path }}"
    }
  ]
}
